<%= form_for([current_user, @upload], :method => "POST", :html => {:multipart => "true"}) do |f| %>
  <% if @upload.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @upload.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.file_field :document %>
  <%= f.submit%>
<% end %>
