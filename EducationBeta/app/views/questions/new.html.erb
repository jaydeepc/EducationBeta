<h1>Questions#new</h1>
<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @question.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  <%= f.label :description %><br />
  <%= f.text_field :description %>
  </p>
  <p>
  <%= f.label :tutor %><br />
  <%= select_tag :tutor, options_for_select(User.find(:all).select{|u| u.is_tutor?}.collect(&:email)) %><br />
  </p>
  <p>
  <%= f.label :subject %><br />
  <%= select_tag :subject, options_for_select(Subject.find(:all).collect(&:subject)) %><br />
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>
