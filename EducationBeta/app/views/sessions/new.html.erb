<html>
<head>
<title>Login</title>
</head>
<body>
  <%= form_tag sessions_path do %>	
 <div id="login-box">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td></td>
  </tr>
  <tr>
    <td></td>
  </tr>
  <tr>
	<td>Name</td> 
    <td><%= text_field_tag :email, params[:email] %></td>
  </tr> 
  <tr>
	<td>Password</td> 
    <td><%= password_field_tag :password %></td>
  </tr>
  <tr>
	<td></td> 
	
    <td><div id="login-btn"><%= submit_tag "Log in" %></div></td>
	
  </tr>
</table>
</div>
<% end %>
</body>
</html>
