<!DOCTYPE html>
<html>
  <head>
    <title>EducationBeta</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "jquery-1.7.1.min.js" %>
    <%= javascript_include_tag "ui/jquery-ui-1.8.17.custom.min.js" %>
    <%= javascript_include_tag "jquery.corner.js" %>
    <%= javascript_include_tag "jquery.validate.js" %>
    <%= javascript_include_tag "css_browser_selector.js" %>
    <%= javascript_include_tag "jquery.jqplot.min.js" %>
    <%= javascript_include_tag "plugins/jqplot.highlighter.min.js" %>
    <%= javascript_include_tag "plugins/jqplot.cursor.min.js" %>
    <%= javascript_include_tag "plugins/jqplot.dateAxisRenderer.min.js" %>
    <%= javascript_include_tag "editor/jquery.cleditor.min.js" %>
    <%= javascript_include_tag "calendar/fullcalendar.min.js" %>
    <%= javascript_include_tag "jquery.multiselect.min.js" %>
    <%= javascript_include_tag "tooltip/jquery.tipsy.js" %>
    <%= javascript_include_tag "validation/jquery.validationEngine.js" %>
    <%= javascript_include_tag "validation/languages/jquery.validationEngine-en.js" %>
    <%= javascript_include_tag "jquery.dataTables.min.js" %>
    <%= javascript_include_tag "js.js" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag 'jquery.min', 'jquery-ui.min', 'rails' %>
    <%= csrf_meta_tags %>

    <style>
      #navigation li {
        width: 124px;
      }
      #navigation li ul li {
        width: 122px;
      }
      #username {
        width: 237px;
      }
    </style>

  </head>
  <body>
    <h2> <div class="grid_3"><%= link_to "", root_url, :id => "title_text" %>
        <div id="header_1"></div>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <div id="user_nav">
        <% if current_user %>
        <% else %>
          <%= link_to "Sign up", sign_up_path, :id => 'user_nav' %>  
          <%= link_to "log in", log_in_path, :id => 'user_nav' %>
        <% end %>
      </div>


      <%= yield %>

    </body>
  </html>
